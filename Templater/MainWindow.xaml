        mc:Ignorable="d"
        Title="MainWindow" Height="452.521" Width="585.714" Initialized="MainWindow1_Initialized">
    <ScrollViewer>
        <Grid x:Name="myGrid" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtFile" HorizontalAlignment="Left" Height="23" Margin="100,10,0,0" TextWrapping="Wrap" Text="Template.txt" VerticalAlignment="Top" Width="314"/>
