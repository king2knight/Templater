            <Button x:Name="btnFolder" Content="Choose Folder" HorizontalAlignment="Left" Margin="431,40,0,0" VerticalAlignment="Top" Width="100" Click="btnFolder_Click" Height="20"/>

        </Grid>
    </ScrollViewer>
</Window>
